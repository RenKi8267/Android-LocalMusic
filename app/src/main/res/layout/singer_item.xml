<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/singer_item"
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/singer"
        android:background="@drawable/layer_list_toolbar"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:subtitle="1张专辑 1首歌曲"
        app:subtitleTextColor="#B8B7B7"
        app:title="title"
        app:titleTextAppearance="@style/Music.ToolBar.TitleText"
        app:subtitleTextAppearance="@style/Music.ToolBar.SubTitleText"/>

</androidx.constraintlayout.widget.ConstraintLayout>