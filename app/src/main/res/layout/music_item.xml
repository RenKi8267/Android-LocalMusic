<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_item"
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:background="@drawable/layer_list_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/music"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:subtitle="singer  time"
        app:subtitleTextColor="#B8B7B7"
        app:title="title"
        app:titleTextAppearance="@style/Music.ToolBar.TitleText"
        app:titleTextColor="@drawable/toolbar_text_color_selector"
        app:subtitleTextAppearance="@style/Music.ToolBar.SubTitleText"/>
<!--    设置后toolbar的背景为白色-->
    <!--        android:background="?attr/colorPrimary"-->
</androidx.constraintlayout.widget.ConstraintLayout>