<?xml version="1.0" encoding="utf-8"?>
<resources>
<!--    设置toolbar的menu弹出菜单样式  -->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="overlapAnchor">false</item>

        <!-- enable window content transitions -->
        <item name="android:windowContentTransitions">true</item>

        <!-- specify enter and exit transitions -->
        <!-- options are: explode, slide, fade -->
        <item name="android:windowEnterTransition">@transition/activity_fade</item>
        <item name="android:windowExitTransition">@transition/activity_slide</item>

        <item name="android:statusBarColor">@color/white</item>
    </style>

<!--  歌曲列表的toolbar标题大小  -->
    <style name="Music.ToolBar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">17dp</item>
    </style>

    <style name="Music.ToolBar.SubTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">14dp</item>
    </style>

<!--  detailActivity的toolbar标题大小  -->
    <style name="Detail.ToolBar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18dp</item>
    </style>

    <!-- 圆形图片 -->
    <style name="circleImageStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- 自定义进度条 -->
    <style name="CustomSeekbarStyle" >
        <item name="android:maxHeight">10dp</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@color/colorSeekBar</item>
        <item name="android:progressDrawable">@drawable/seekbar_progress</item>
        <item name="android:minHeight">7dp</item>
        <item name="android:thumb">@drawable/ic_seek_bar</item>
    </style>
</resources>